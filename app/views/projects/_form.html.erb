<%= form_for(@project, html: {multipart: true}) do |f| %>

  <%= render 'partials/errors', object: @project %>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, {}, class: 'form-control' %>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>

  <div>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>

  <div>
    <%= f.label :start_date %>
    <%= f.datetime_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.datetime_field :end_date %>
  </div>

  <%= f.submit %>
<% end %>
